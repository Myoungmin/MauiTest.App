<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiTest.ViewModels"
             x:Name="Root"
             x:Class="MauiTest.DetailsPage"
             Title="DetailsPage">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <GraphicsView
            x:Name="GraphicsViewName"
            HeightRequest="120"
            WidthRequest="400">
            <GraphicsView.Drawable>
                <viewModels:RectangleDrawable ColorValue="{Binding Source={ x:Reference Root }, Path=ColorProperty}"/>
            </GraphicsView.Drawable>
        </GraphicsView>

        <Button
                Text="Color Button"
                Command="{Binding ColorCommand}"
                HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>